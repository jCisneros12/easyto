<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcisneros.easyto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_easyto"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_easyto_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Easyto">
        <activity android:name=".ui.taskdetail.TaskDetailActivity"/>
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Easyto.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>